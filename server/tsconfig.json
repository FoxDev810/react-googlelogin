{
  "compilerOptions": {
    "target": "es2016",  
    "module": "commonjs",                             
    "rootDir": "./src",                              
    "outDir": "./dist",                             
    "isolatedModules": true,                         
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,  
    "strict": true,                            
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types", ],
    "jsx": "react"
  },
}
